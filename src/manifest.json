{
  "name": "Papyrs to markdown",
  "description": "Export Papyrs blog posts to markdown",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://*.papy.rs/"],
  "action": {
    "default_title": "Papyrs to markdown"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "/assets/icons/icon16x16.png",
    "32": "/assets/icons/icon32x32.png",
    "48": "/assets/icons/icon48x48.png",
    "128": "/assets/icons/icon128x128.png"
  }
}
