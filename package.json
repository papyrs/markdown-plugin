{
  "name": "markdown-plugin",
  "version": "0.0.1",
  "description": "A Chrome plugin to convert Papyrs blog posts to markdown",
  "main": "dist/background.js",
  "scripts": {
    "format": "prettier . --write",
    "build": "node rmdir.mjs && node esbuild.mjs && node ./copy-files.js",
    "test": "jest"
  },
  "author": "David Dal Busco",
  "license": "MIT",
  "homepage": "https://papy.rs",
  "devDependencies": {
    "@types/chrome": "0.0.181",
    "@types/jest": "^27.4.1",
    "@types/turndown": "^5.0.1",
    "@types/wicg-file-system-access": "^2020.9.5",
    "esbuild": "^0.14.36",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-quick": "0.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/papyrs/markdown-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/papyrs/markdown-plugin"
  },
  "keywords": [
    "markdown",
    "html-to-markdown"
  ],
  "dependencies": {
    "turndown": "^7.1.1"
  }
}
